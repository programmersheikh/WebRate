<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WEBLOG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (User.IsInRole("Admin")) {  
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label">Admin</span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Website", "Index", "Websites")</li>
                            <li>@Html.ActionLink("Add Topic", "Index", "Topics")</li>


                            <li class="divider"> </li>

                            <li>@Html.ActionLink("Website Reviews", "Index", "WebComments")</li>
                            <li>@Html.ActionLink("Topic Reviews", "Index", "TopicComments")</li>





                            <li class="divider"> </li>

                            <li>@Html.ActionLink("Rate Website", "Create", "WebComments")</li>
                            <li>@Html.ActionLink("Rate Topic", "Create", "TopicComments")</li>



                        </ul>
                    </li>

                    }



                    <li>@Html.ActionLink("View Website", "Index", "WebComments")</li>
                    <li>@Html.ActionLink("View Topic", "Index", "TopicComments")</li>
                    <li>@Html.ActionLink("Rate Website", "Create", "WebComments")</li>
                    <li>@Html.ActionLink("Rate Topic", "Create", "TopicComments")</li>



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - WebRate</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
